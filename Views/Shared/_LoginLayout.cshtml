<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - POS Restoran</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #f0f9ff 0%, #dbeafe 50%, #bfdbfe 100%);
        }

        .floating-animation {
            animation: float 4s ease-in-out infinite;
        }

        keyframes float {
            0%, 100%

        {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }

        }

        .input-focus {
            transition: all 0.3s ease;
        }

            .input-focus:focus {
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(59, 130, 246, 0.15);
            }

        .btn-hover {
            transition: all 0.3s ease;
        }

            .btn-hover:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(59, 130, 246, 0.3);
            }

        .shape {
            position: absolute;
            opacity: 0.05;
            animation: rotate 15s linear infinite;
        }

        keyframes rotate {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }

        }
    </style>
</head>
<body class="gradient-bg min-h-screen flex items-center justify-center relative overflow-hidden">
    <!-- Subtle Background Shapes -->
    <div class="shape top-20 left-16 w-12 h-12 bg-blue-400 rounded-full"></div>
    <div class="shape top-40 right-20 w-8 h-8 bg-blue-500 rounded-lg"></div>
    <div class="shape bottom-32 left-24 w-6 h-6 bg-blue-300 rounded-full"></div>
    <div class="shape bottom-20 right-28 w-10 h-4 bg-blue-400 rounded-full"></div>

    @RenderBody()
</body>
</html>