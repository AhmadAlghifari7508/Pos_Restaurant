@model POSRestoran01.Models.ViewModels.ProductViewModels.ProductManagementViewModel
@{
    ViewData["Title"] = "Product Management";
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
    <div class="h-screen overflow-y-auto">
        <div class="container mx-auto px-6 py-6">
            <!-- Header -->
            <div class="mb-6">
                <div class="flex items-center justify-between mb-4">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-800 mb-2">Product Management</h1>
                        <p class="text-gray-600 text-sm">Kelola menu dan kategori restoran Anda</p>
                    </div>
                    <div class="flex space-x-3">
                        <button onclick="showCategoryModal()"
                                class="bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white px-5 py-2.5 rounded-lg flex items-center space-x-2 transition-all transform hover:scale-105 shadow-lg">
                            <i class="fas fa-tags"></i>
                            <span class="font-medium">Manage Kategori</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Category Tabs with Filter -->
            <div class="mb-6 bg-white rounded-lg shadow-sm border border-gray-200 p-4">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex space-x-4 overflow-x-auto pb-2">
                        <button onclick="loadProductCategory(0)"
                                class="px-4 py-2 font-medium transition-all category-tab whitespace-nowrap rounded-lg @(Model.SelectedCategoryId == 0 ? "bg-blue-600 text-white shadow-md" : "text-gray-600 hover:bg-gray-100")"
                                data-category-id="0">
                            <i class="fas fa-th-large mr-2"></i>Semua Kategori
                        </button>
                        @foreach (var category in Model.Categories)
                        {
                            <button onclick="loadProductCategory(@category.CategoryId)"
                                    class="px-4 py-2 font-medium transition-all category-tab whitespace-nowrap rounded-lg @(category.CategoryId == Model.SelectedCategoryId ? "bg-blue-600 text-white shadow-md" : "text-gray-600 hover:bg-gray-100")"
                                    data-category-id="@category.CategoryId">
                                @category.CategoryName
                            </button>
                        }
                    </div>

                    <!-- Status Filter -->
                    <div class="flex items-center space-x-2 ml-4">
                        <label class="text-sm font-medium text-gray-700">Filter:</label>
                        <select id="statusFilter" onchange="filterByStatus(this.value)" class="px-3 py-1.5 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="all">Semua</option>
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                            <option value="discount">Diskon Aktif</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Menu Items Grid -->
            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 2xl:grid-cols-8 gap-3" id="menuItemsGrid">
                <!-- Add New Menu Item Card - Updated Design -->
                <div class="bg-white rounded-lg shadow-sm border-2 border-dashed border-gray-300 hover:border-blue-400 hover:shadow-md transition-all cursor-pointer group"
                     onclick="showAddMenuModal()">
                    <div class="p-4 text-center h-full flex flex-col justify-center min-h-[200px]">
                        <div class="w-14 h-14 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-3 group-hover:bg-blue-200 transition-all">
                            <i class="fas fa-plus text-2xl text-blue-600"></i>
                        </div>
                        <h3 class="text-sm font-semibold text-gray-800 mb-1">Tambah Menu</h3>
                        <p class="text-gray-600 text-xs">Klik untuk menambah menu baru</p>
                    </div>
                </div>

                <!-- Existing Menu Items -->
                <div id="existingMenuItems" class="contents">
                    @await Html.PartialAsync("_ProductMenuItemsPartial", Model.MenuItems)
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Category Management Modal -->
<div id="categoryModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 backdrop-blur-sm">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md mx-4 max-h-[90vh] overflow-hidden">
        <div class="bg-gradient-to-r from-purple-600 to-purple-700 p-6">
            <div class="flex items-center justify-between text-white">
                <div>
                    <h3 class="text-xl font-bold mb-1">Manage Kategori</h3>
                    <p class="text-sm opacity-90">Kelola kategori menu restoran</p>
                </div>
                <button onclick="hideCategoryModal()" class="text-white hover:bg-white hover:bg-opacity-20 p-2 rounded-lg transition-all">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
        </div>

        <div class="p-6 overflow-y-auto max-h-[calc(90vh-120px)]">
            <!-- Add New Category -->
            <form id="addCategoryForm" class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">Tambah Kategori Baru</label>
                <div class="flex space-x-2">
                    <input type="text" id="newCategoryName" placeholder="Nama kategori..."
                           class="flex-1 px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all">
                    <button type="submit" class="bg-purple-600 hover:bg-purple-700 text-white px-6 py-2.5 rounded-lg transition-all transform hover:scale-105 shadow-md">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </form>

            <!-- Category List -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-3">Daftar Kategori</label>
                <div id="categoryList" class="space-y-2">
                    <!-- Categories will be loaded here -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add/Edit Menu Modal with Tabs -->
<div id="menuModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 backdrop-blur-sm">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-2xl mx-4 max-h-[95vh] overflow-hidden">
        <!-- Modal Header -->
        <div class="bg-gradient-to-r from-blue-600 to-blue-700 p-6">
            <div class="flex items-center justify-between text-white">
                <div>
                    <h3 id="menuModalTitle" class="text-xl font-bold mb-1">Tambah Menu Baru</h3>
                    <p class="text-sm opacity-90">Isi informasi menu dengan lengkap</p>
                </div>
                <button onclick="hideMenuModal()" class="text-white hover:bg-white hover:bg-opacity-20 p-2 rounded-lg transition-all">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
        </div>

        <!-- Tab Navigation -->
        <div class="bg-gray-50 border-b border-gray-200">
            <div class="flex px-6">
                <button type="button" onclick="switchTab('basic')" id="basicTab" class="px-6 py-3 font-medium text-blue-600 border-b-2 border-blue-600 transition-all">
                    <i class="fas fa-info-circle mr-2"></i>Info Dasar
                </button>
                <button type="button" onclick="switchTab('discount')" id="discountTab" class="px-6 py-3 font-medium text-gray-500 hover:text-blue-600 transition-all">
                    <i class="fas fa-percentage mr-2"></i>Pengaturan Diskon
                </button>
            </div>
        </div>

        <!-- Form Content -->
        <div class="p-6 overflow-y-auto max-h-[calc(95vh-200px)]">
            <form id="menuForm" enctype="multipart/form-data">
                <input type="hidden" id="menuItemId" name="MenuItemId" value="">

                <!-- Basic Info Tab -->
                <div id="basicTabContent" class="space-y-4">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Kategori *</label>
                            <select id="menuCategoryId" name="CategoryId" class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" required>
                                <option value="">Pilih Kategori</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.CategoryId">@category.CategoryName</option>
                                }
                            </select>
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Status Menu</label>
                            <div class="flex items-center justify-between bg-gray-50 px-4 py-3 rounded-lg border border-gray-200">
                                <span class="text-sm text-gray-700 font-medium">Aktifkan Menu</span>
                                <div class="relative">
                                    <input type="checkbox" id="menuIsActive" class="sr-only">
                                    <div class="toggle-switch w-12 h-6 bg-gray-300 rounded-full cursor-pointer transition-colors duration-300" onclick="toggleActiveStatus()">
                                        <div class="toggle-dot w-5 h-5 bg-white rounded-full shadow-md transform transition-transform duration-300 translate-x-0.5"></div>
                                    </div>
                                    <input type="hidden" name="IsActive" id="hiddenIsActive">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Nama Menu *</label>
                        <input type="text" id="menuItemName" name="ItemName" placeholder=""
                               class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" required>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Deskripsi</label>
                        <textarea id="menuDescription" name="Description" rows="3" placeholder=""
                                  class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none"></textarea>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Harga (Rp) *</label>
                            <div class="relative">
                                <span class="absolute left-4 top-3 text-gray-500">Rp</span>
                                <input type="number" id="menuPrice" name="Price" step="1" min="0" placeholder="0"
                                       class="w-full pl-12 pr-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" required>
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Stok *</label>
                            <input type="number" id="menuStock" name="Stock" min="0" placeholder="0"
                                   class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" required>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Gambar Menu</label>
                        <div class="space-y-3">
                            <div class="flex items-center justify-center w-full">
                                <label for="menuImage" class="flex flex-col items-center justify-center w-full h-32 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100 transition-all">
                                    <div class="flex flex-col items-center justify-center pt-5 pb-6">
                                        <i class="fas fa-cloud-upload-alt text-3xl text-gray-400 mb-2"></i>
                                        <p class="mb-2 text-sm text-gray-500"><span class="font-semibold">Klik untuk upload</span> atau drag & drop</p>
                                        <p class="text-xs text-gray-500">PNG, JPG (MAX. 5MB)</p>
                                    </div>
                                    <input id="menuImage" name="ImageFile" type="file" class="hidden" accept="image/*" />
                                </label>
                            </div>

                            <!-- Current Image Preview -->
                            <div id="currentImagePreview" class="hidden bg-gray-50 rounded-lg p-3 border border-gray-200">
                                <label class="block text-xs font-semibold text-gray-600 mb-2">Gambar Saat Ini:</label>
                                <img id="currentImage" src="" alt="Current Image" class="w-24 h-24 object-cover rounded-lg mx-auto">
                            </div>

                            <!-- New Image Preview -->
                            <div id="imagePreview" class="hidden bg-blue-50 rounded-lg p-3 border border-blue-200">
                                <label class="block text-xs font-semibold text-blue-700 mb-2">Preview Gambar Baru:</label>
                                <div class="relative inline-block">
                                    <img id="previewImage" src="" alt="Preview" class="w-24 h-24 object-cover rounded-lg">
                                    <button type="button" onclick="clearImagePreview()" class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-6 h-6 flex items-center justify-center text-xs hover:bg-red-600 transition-all shadow-lg">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Discount Tab -->
                <div id="discountTabContent" class="space-y-4 hidden">
                    <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl p-6 border border-purple-200">
                        <div class="flex items-center justify-between mb-6">
                            <div>
                                <h4 class="text-lg font-bold text-purple-900 mb-1 flex items-center">
                                    <i class="fas fa-percentage mr-2"></i>Pengaturan Diskon
                                </h4>
                                <p class="text-sm text-purple-700">Atur diskon untuk menu ini</p>
                            </div>
                            <div class="relative">
                                <input type="checkbox" id="menuDiscountActive" class="sr-only">
                                <div class="discount-toggle-switch w-14 h-7 bg-gray-300 rounded-full cursor-pointer transition-colors duration-300" onclick="toggleDiscountStatus()">
                                    <div class="discount-toggle-dot w-6 h-6 bg-white rounded-full shadow-lg transform transition-transform duration-300 translate-x-0.5"></div>
                                </div>
                                <input type="hidden" name="IsDiscountActive" id="hiddenDiscountActive">
                            </div>
                        </div>

                        <!-- Discount Fields -->
                        <div id="discountFieldsContainer" class="space-y-4 hidden">
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">Persentase Diskon (%)</label>
                                <div class="relative">
                                    <input type="number" id="menuDiscountPercentage" name="DiscountPercentage" step="0.01" min="0" max="100"
                                           class="w-full px-4 py-3 pr-12 text-lg font-bold border-2 border-purple-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all"
                                           placeholder="0.00">
                                    <span class="absolute right-4 top-3.5 text-purple-600 font-bold text-lg">%</span>
                                </div>
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                                        <i class="fas fa-calendar-alt text-green-600 mr-1"></i>Tanggal Mulai
                                    </label>
                                    <input type="datetime-local" id="menuDiscountStartDate" name="DiscountStartDate"
                                           class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all text-sm">
                                </div>
                                <div>
                                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                                        <i class="fas fa-calendar-times text-red-600 mr-1"></i>Tanggal Berakhir
                                    </label>
                                    <input type="datetime-local" id="menuDiscountEndDate" name="DiscountEndDate"
                                           class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all text-sm">
                                </div>
                            </div>

                            <!-- Price Preview Card -->
                            <div class="bg-white rounded-lg p-5 border-2 border-purple-200 shadow-sm">
                                <label class="block text-xs font-bold text-gray-600 mb-3 uppercase tracking-wide">Preview Harga:</label>
                                <div class="flex items-center justify-between mb-3">
                                    <span class="text-sm text-gray-500">Harga Asli:</span>
                                    <span id="originalPricePreview" class="text-gray-400 line-through font-medium">Rp 0</span>
                                </div>
                                <div class="flex items-center justify-between mb-3">
                                    <span class="text-sm font-semibold text-gray-700">Harga Setelah Diskon:</span>
                                    <span id="discountedPricePreview" class="text-2xl font-bold text-red-600">Rp 0</span>
                                </div>
                                <div class="pt-3 border-t border-gray-200">
                                    <span id="savingsPreview" class="inline-block bg-gradient-to-r from-red-500 to-pink-500 text-white text-sm px-4 py-2 rounded-full font-bold shadow-md hidden"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex space-x-3 pt-6 border-t border-gray-200 mt-6">
                    <button type="button" onclick="hideMenuModal()" class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-800 py-3 px-4 rounded-lg transition-all font-semibold">
                        <i class="fas fa-times mr-2"></i>Batal
                    </button>
                    <button type="submit" id="menuSubmitBtn" class="flex-1 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white py-3 px-4 rounded-lg transition-all font-semibold shadow-lg transform hover:scale-105">
                        <i class="fas fa-save mr-2"></i>Simpan Menu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Loading Overlay -->
<div id="loadingOverlay" class="fixed inset-0 bg-black bg-opacity-30 hidden items-center justify-center z-40 backdrop-blur-sm">
    <div class="bg-white rounded-2xl p-8 flex flex-col items-center space-y-4 shadow-2xl">
        <div class="animate-spin rounded-full h-12 w-12 border-4 border-blue-500 border-t-transparent"></div>
        <span class="text-gray-700 font-semibold text-lg">Memproses...</span>
    </div>
</div>

@section Scripts {
    <script src="~/js/product-management.js"></script>
    <script>
        function switchTab(tab) {
            // Update tab buttons
            document.getElementById('basicTab').className = 'px-6 py-3 font-medium transition-all ' +
                (tab === 'basic' ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-500 hover:text-blue-600');
            document.getElementById('discountTab').className = 'px-6 py-3 font-medium transition-all ' +
                (tab === 'discount' ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-500 hover:text-blue-600');

            // Update content
            document.getElementById('basicTabContent').classList.toggle('hidden', tab !== 'basic');
            document.getElementById('discountTabContent').classList.toggle('hidden', tab !== 'discount');
        }

        function filterByStatus(status) {
            const menuItems = document.querySelectorAll('.menu-item-card');
            menuItems.forEach(item => {
                const isActive = item.getAttribute('data-is-active') === 'true';
                const hasDiscount = item.getAttribute('data-has-discount') === 'true';

                let show = false;
                switch (status) {
                    case 'all':
                        show = true;
                        break;
                    case 'active':
                        show = isActive;
                        break;
                    case 'inactive':
                        show = !isActive;
                        break;
                    case 'discount':
                        show = hasDiscount;
                        break;
                }

                item.style.display = show ? 'block' : 'none';
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            initializeProductManagement();
            loadCategories();
            setupImagePreview();
            setupToggleSwitch();
            setupDiscountFeatures();
        });
    </script>
}

@{
    @Html.AntiForgeryToken()
}