@model POSRestoran01.Models.ViewModels.SettingsViewModels.SettingsViewModel
@{
    ViewData["Title"] = "Settings";
}

<div class="flex h-screen bg-gray-100">

    <div class="w-64 bg-white shadow-lg">
        <div class="p-6 border-b border-gray-200">
            <h2 class="text-xl font-semibold text-gray-800">Settings</h2>
        </div>

        <nav class="mt-6">

            <a href="?section=account" class="flex items-center px-6 py-3 text-gray-700 hover:bg-gray-50 hover:text-blue-600 transition-colors @(Model.ActiveSection == "account" || string.IsNullOrEmpty(Model.ActiveSection) ? "bg-blue-50 text-blue-600 border-r-2 border-blue-600" : "")">
                <i class="fas fa-user mr-3"></i>
                <span>Akun</span>
            </a>

            <a href="?section=cashier-dashboard" class="flex items-center px-6 py-3 text-gray-700 hover:bg-gray-50 hover:text-blue-600 transition-colors @(Model.ActiveSection == "cashier-dashboard" ? "bg-blue-50 text-blue-600 border-r-2 border-blue-600" : "")">
                <i class="fas fa-tachometer-alt mr-3"></i>
                <span>Aktivitas Kasir</span>
            </a>

            <a href="?section=about" class="flex items-center px-6 py-3 text-gray-700 hover:bg-gray-50 hover:text-blue-600 transition-colors @(Model.ActiveSection == "about" ? "bg-blue-50 text-blue-600 border-r-2 border-blue-600" : "")">
                <i class="fas fa-info-circle mr-3"></i>
                <span>About Us</span>
            </a>

            <a href="?section=stock-history" class="flex items-center px-6 py-3 text-gray-700 hover:bg-gray-50 hover:text-blue-600 transition-colors @(Model.ActiveSection == "stock-history" ? "bg-blue-50 text-blue-600 border-r-2 border-blue-600" : "")">
                <i class="fas fa-history mr-3"></i>
                <span>Riwayat Stok</span>
            </a>

            <button onclick="logout()" class="w-full flex items-center px-6 py-3 text-red-600 hover:bg-red-50 transition-colors mt-6 border-t border-gray-200">
                <i class="fas fa-sign-out-alt mr-3"></i>
                <span>Logout</span>
            </button>
        </nav>
    </div>


    <div class="flex-1 p-6 overflow-y-auto">
        @if (Model.ActiveSection == "account" || string.IsNullOrEmpty(Model.ActiveSection))
        {

            @await Html.PartialAsync("_CurrentUserAccountPartial", Model)
        }
        else if (Model.ActiveSection == "cashier-dashboard")
        {

            <div class="mb-6">
                <div class="flex items-center justify-between mb-4">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-800">Aktivitas Kasir</h1>
                        <p class="text-gray-600">@Model.CurrentUser?.FullName - @Model.CurrentUser?.Role</p>
                    </div>
                    <div class="flex items-center space-x-4">
                        <label class="text-sm font-medium text-gray-700">Pilih Tanggal:</label>
                        <input type="date"
                               id="cashierSelectedDate"
                               class="px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
                               value="">
                        <button onclick="filterCashierDashboard()"
                                class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors">
                            <i class="fas fa-search mr-2"></i>Filter
                        </button>
                        <button onclick="closeShift()"
                                class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition-colors">
                            <i class="fas fa-door-closed mr-2"></i>Tutup Shift
                        </button>
                    </div>
                </div>
            </div>

            <div id="cashierDashboardContainer">
                @if (Model.CashierDashboard != null)
                {
                    @await Html.PartialAsync("_CashierDashboardPartial", Model.CashierDashboard)
                }
                else
                {
                    <div class="bg-white rounded-lg shadow-md p-8 text-center">
                        <i class="fas fa-chart-line text-6xl text-gray-300 mb-4"></i>
                        <p class="text-gray-500 text-lg">Dashboard data akan dimuat...</p>
                    </div>
                }
            </div>
        }
        else if (Model.ActiveSection == "about")
        {

            <div class="mb-6">
                <h1 class="text-3xl font-bold text-gray-800 mb-4">Tentang Restoran</h1>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="text-center mb-8">
                    <div class="w-24 h-24 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-utensils text-3xl text-blue-600"></i>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-800 mb-2">POS Restoran</h2>
                    <p class="text-gray-600">Sistem Point of Sale untuk Restoran Modern</p>
                </div>

                <div class="grid md:grid-cols-2 gap-8">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-800 mb-4">Fitur Utama</h3>
                        <ul class="space-y-3 text-gray-600">
                            <li class="flex items-center">
                                <i class="fas fa-check-circle text-green-500 mr-2"></i>
                                Laporan Penjualan
                            </li>
                            <li class="flex items-center">
                                <i class="fas fa-check-circle text-green-500 mr-2"></i>
                                Manajemen Stok
                            </li>
                            <li class="flex items-center">
                                <i class="fas fa-check-circle text-green-500 mr-2"></i>
                                Dashboard Analytics
                            </li>
                        </ul>
                    </div>

                    <div>
                        <h3 class="text-lg font-semibold text-gray-800 mb-4">Informasi Sistem</h3>
                        <div class="space-y-3 text-gray-600">
                            <div class="flex justify-between">
                                <span>Versi:</span>
                                <span class="font-semibold">1.0.0</span>
                            </div>
                            <div class="flex justify-between">
                                <span>Technology:</span>
                                <span class="font-semibold">ASP.NET Core MVC</span>
                            </div>
                            <div class="flex justify-between">
                                <span>Database:</span>
                                <span class="font-semibold">SQL Server</span>
                            </div>
                            <div class="flex justify-between">
                                <span>UI Framework:</span>
                                <span class="font-semibold">Tailwind CSS</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-8 p-4 bg-blue-50 rounded-lg">
                    <h4 class="font-semibold text-blue-800 mb-2">Bantuan & Support</h4>
                    <p class="text-blue-600 text-sm">
                        Untuk bantuan teknis atau pertanyaan mengenai sistem, silakan hubungi administrator sistem.
                    </p>
                </div>
            </div>
        }
        else if (Model.ActiveSection == "stock-history")
        {
            <div class="mb-6">
                <div class="flex items-center justify-between mb-4">
                    <h1 class="text-3xl font-bold text-gray-800">Riwayat Stok</h1>
                    <div class="flex items-center space-x-4">
                        <input type="date" id="stockStartDate" class="px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                        <input type="date" id="stockEndDate" class="px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                        <button onclick="filterStockHistory()" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors">
                            <i class="fas fa-search mr-2"></i>Filter
                        </button>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md">
                <div class="p-6" id="stockHistoryContainer">
                    @if (Model.StockHistories != null)
                    {
                        @await Html.PartialAsync("_StockHistoryPartial", Model.StockHistories)
                    }
                    else
                    {
                        <div class="text-center py-8 text-gray-500">
                            <i class="fas fa-history text-4xl mb-4"></i>
                            <p>Riwayat stok akan dimuat...</p>
                        </div>
                    }
                </div>
            </div>
        }
        else if (Model.ActiveSection == "user-activity")
        {
            <div class="mb-6">
                <div class="flex items-center justify-between mb-4">
                    <h1 class="text-3xl font-bold text-gray-800">Aktivitas Kasir</h1>
                    <div class="flex items-center space-x-4">
                        <input type="date" id="activityStartDate" class="px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                        <input type="date" id="activityEndDate" class="px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                        <button onclick="filterUserActivity()" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors">
                            <i class="fas fa-search mr-2"></i>Filter
                        </button>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md">
                <div class="p-6" id="userActivityContainer">
                    @if (Model.UserActivities != null)
                    {
                        @await Html.PartialAsync("_UserActivityPartial", Model.UserActivities)
                    }
                    else
                    {
                        <div class="text-center py-8 text-gray-500">
                            <i class="fas fa-chart-line text-4xl mb-4"></i>
                            <p>Aktivitas pengguna akan dimuat...</p>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

<div id="createUserModal" class="fixed inset-0 bg-black bg-opacity-60 hidden items-center justify-center z-50">
    <div class="bg-white rounded-3xl shadow-2xl w-full max-w-md mx-4 max-h-[90vh] overflow-y-auto transform transition-all">
        <div class="relative">
            <div class="bg-gradient-to-r from-emerald-500 to-emerald-600 px-8 py-6 rounded-t-3xl">
                <div class="flex items-center justify-between text-white">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-white bg-opacity-20 rounded-xl flex items-center justify-center">
                            <i class="fas fa-user-plus text-lg"></i>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold">Tambah Pengguna Baru</h3>
                            <p class="text-emerald-100 text-sm">Buat pengguna baru</p>
                        </div>
                    </div>
                    <button type="button" onclick="hideCreateUserModal()"
                            class="w-8 h-8 bg-white bg-opacity-20 hover:bg-opacity-30 rounded-lg flex items-center justify-center transition-colors">
                        <i class="fas fa-times text-lg"></i>
                    </button>
                </div>
            </div>

            <div class="p-8">
                <form id="createUserForm">
                    <div class="space-y-5">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-3">
                                <i class="fas fa-user mr-2 text-gray-500"></i>Nama Lengkap
                            </label>
                            <input type="text" id="newUserFullName" name="FullName"
                                   class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all hover:border-gray-300"
                                   required placeholder="Masukkan nama lengkap">
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-3">
                                <i class="fas fa-at mr-2 text-gray-500"></i>Username
                            </label>
                            <input type="text" id="newUserUsername" name="Username"
                                   class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all hover:border-gray-300"
                                   required placeholder="Masukkan username">
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-3">
                                <i class="fas fa-envelope mr-2 text-gray-500"></i>Email
                            </label>
                            <input type="email" id="newUserEmail" name="Email"
                                   class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all hover:border-gray-300"
                                   required placeholder="contoh@email.com">
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-3">
                                <i class="fas fa-lock mr-2 text-gray-500"></i>Password
                            </label>
                            <div class="relative">
                                <input type="password" id="newUserPassword" name="Password"
                                       class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all hover:border-gray-300"
                                       required placeholder="Minimal 6 karakter">
                                <button type="button" onclick="togglePasswordVisibility('newUserPassword', this)"
                                        class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-3">
                                <i class="fas fa-lock mr-2 text-gray-500"></i>Konfirmasi Password
                            </label>
                            <div class="relative">
                                <input type="password" id="newUserConfirmPassword" name="ConfirmPassword"
                                       class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all hover:border-gray-300"
                                       required placeholder="Ulangi password">
                                <button type="button" onclick="togglePasswordVisibility('newUserConfirmPassword', this)"
                                        class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-3">
                                <i class="fas fa-user-tag mr-2 text-gray-500"></i>Role Pengguna
                            </label>
                            <select id="newUserRole" name="Role"
                                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all hover:border-gray-300"
                                    required>
                                <option value="Cashier">Kasir</option>
                            </select>
                        </div>
                    </div>
                    <div class="flex space-x-3 pt-8 border-t border-gray-200 mt-8">
                        <button type="button" onclick="hideCreateUserModal()"
                                class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-800 py-3 px-6 rounded-xl transition-colors font-semibold">
                            Batal
                        </button>
                        <button type="submit"
                                class="flex-1 bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 text-white py-3 px-6 rounded-xl transition-all font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                            <i class="fas fa-plus mr-2"></i>Tambah Pengguna
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="editCurrentUserModal" class="fixed inset-0 bg-black bg-opacity-60 hidden items-center justify-center z-50">
    <div class="bg-white rounded-3xl shadow-2xl w-full max-w-md mx-4 max-h-[90vh] overflow-y-auto transform transition-all">
        <div class="relative">
            <div class="bg-gradient-to-r from-blue-500 to-blue-600 px-8 py-6 rounded-t-3xl">
                <div class="flex items-center justify-between text-white">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-white bg-opacity-20 rounded-xl flex items-center justify-center">
                            <i class="fas fa-user-edit text-lg"></i>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold">Edit Akun</h3>
                            <p class="text-blue-100 text-sm">Perbarui informasi profil</p>
                        </div>
                    </div>
                    <button type="button" onclick="hideEditCurrentUserModal()"
                            class="w-8 h-8 bg-white bg-opacity-20 hover:bg-opacity-30 rounded-lg flex items-center justify-center transition-colors">
                        <i class="fas fa-times text-lg"></i>
                    </button>
                </div>
            </div>

            <div class="p-8">
                <form id="editCurrentUserForm">
                    <div class="space-y-5">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-3">
                                <i class="fas fa-user mr-2 text-gray-500"></i>Nama Lengkap
                            </label>
                            <input type="text" id="editCurrentUserFullName" name="FullName"
                                   class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all hover:border-gray-300"
                                   required placeholder="Nama lengkap">
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-3">
                                <i class="fas fa-at mr-2 text-gray-500"></i>Username
                            </label>
                            <input type="text" id="editCurrentUserUsername" name="Username"
                                   class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl bg-gray-50 text-gray-500 cursor-not-allowed"
                                   readonly disabled>
                            <p class="text-xs text-gray-500 mt-2 flex items-center">
                                <i class="fas fa-info-circle mr-1"></i>Username tidak dapat diubah
                            </p>
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-3">
                                <i class="fas fa-envelope mr-2 text-gray-500"></i>Email
                            </label>
                            <input type="email" id="editCurrentUserEmail" name="Email"
                                   class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all hover:border-gray-300"
                                   required placeholder="Email aktif">
                        </div>

                        <div class="bg-gray-50 rounded-2xl p-6 mt-8">
                            <div class="flex items-center mb-4">
                                <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
                                    <i class="fas fa-key text-blue-600"></i>
                                </div>
                                <div>
                                    <h4 class="text-lg font-semibold text-gray-800">Ubah Password</h4>
                                    <p class="text-sm text-gray-600">Kosongkan jika tidak ingin mengubah</p>
                                </div>
                            </div>

                            <div class="space-y-4">
                                <div>
                                    <label class="block text-sm font-semibold text-gray-700 mb-2">Password Lama</label>
                                    <div class="relative">
                                        <input type="password" id="editCurrentUserCurrentPassword" name="CurrentPassword"
                                               class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all hover:border-gray-300"
                                               placeholder="Masukkan password lama">
                                        <button type="button" onclick="togglePasswordVisibility('editCurrentUserCurrentPassword', this)"
                                                class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                </div>

                                <div>
                                    <label class="block text-sm font-semibold text-gray-700 mb-2">Password Baru</label>
                                    <div class="relative">
                                        <input type="password" id="editCurrentUserNewPassword" name="NewPassword"
                                               class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all hover:border-gray-300"
                                               placeholder="Minimal 6 karakter">
                                        <button type="button" onclick="togglePasswordVisibility('editCurrentUserNewPassword', this)"
                                                class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                </div>

                                <div>
                                    <label class="block text-sm font-semibold text-gray-700 mb-2">Konfirmasi Password Baru</label>
                                    <div class="relative">
                                        <input type="password" id="editCurrentUserConfirmPassword" name="ConfirmPassword"
                                               class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all hover:border-gray-300"
                                               placeholder="Ulangi password baru">
                                        <button type="button" onclick="togglePasswordVisibility('editCurrentUserConfirmPassword', this)"
                                                class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="flex space-x-3 pt-8 border-t border-gray-200 mt-8">
                        <button type="button" onclick="hideEditCurrentUserModal()"
                                class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-800 py-3 px-6 rounded-xl transition-colors font-semibold">
                            Batal
                        </button>
                        <button type="submit"
                                class="flex-1 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white py-3 px-6 rounded-xl transition-all font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                            <i class="fas fa-save mr-2"></i>Update Akun
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div id="loadingOverlay" class="fixed inset-0 bg-black bg-opacity-30 hidden items-center justify-center z-40">
    <div class="bg-white rounded-lg p-6 flex items-center space-x-3 shadow-xl">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-500"></div>
        <span class="text-gray-700 font-medium">Memproses...</span>
    </div>
</div>


<form style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script src="~/js/settings.js"></script>
}