@model POSRestoran01.Models.ViewModels.SettingsViewModels.SettingsViewModel

<!-- Halaman Akun Saya -->
<div class="mb-6">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Akun Saya</h1>
            <p class="text-gray-600 mt-1">Kelola informasi akun dan profil Anda</p>
        </div>
        <div class="flex space-x-3">
            <button type="button" onclick="showCreateUserModal()"
                    class="bg-emerald-600 hover:bg-emerald-700 text-white px-5 py-2.5 rounded-xl flex items-center space-x-2 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                <i class="fas fa-plus text-sm"></i>
                <span class="font-medium">Tambah Pengguna</span>
            </button>
            <button type="button" onclick="showEditCurrentUserModal()"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2.5 rounded-xl flex items-center space-x-2 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                <i class="fas fa-edit text-sm"></i>
                <span class="font-medium">Edit Akun</span>
            </button>
        </div>
    </div>
</div>

<div class="bg-white rounded-2xl shadow-xl overflow-hidden">
    <div class="bg-gradient-to-r from-blue-600 via-blue-700 to-indigo-800 px-8 py-6">
        <div class="flex items-center space-x-6">
            <div class="w-20 h-20 bg-white bg-opacity-20 rounded-2xl flex items-center justify-center backdrop-blur-sm">
                <i class="fas fa-user text-3xl text-white"></i>
            </div>
            <div class="text-white">
                <h2 class="text-2xl font-bold mb-1" id="currentUserFullName">@Model.CurrentUser?.FullName</h2>
                <p class="text-blue-100 text-lg" id="currentUserRole">@Model.CurrentUser?.Role</p>
            </div>
        </div>
    </div>

    <div class="p-8">
        <h3 class="text-xl font-semibold text-gray-800 mb-6 flex items-center">
            <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
                <i class="fas fa-id-card text-blue-600"></i>
            </div>
            Informasi Akun
        </h3>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Kolom Kiri -->
            <div class="space-y-4">
                <div class="bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors">
                    <div class="flex justify-between items-center">
                        <span class="text-gray-600 font-medium">ID Pengguna</span>
                        <span class="font-bold text-gray-800 bg-white px-3 py-1 rounded-lg shadow-sm" id="currentUserId">@ViewBag.UserId</span>
                    </div>
                </div>

                <div class="bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors">
                    <div class="flex justify-between items-center">
                        <span class="text-gray-600 font-medium">Username</span>
                        <span class="font-bold text-gray-800 bg-white px-3 py-1 rounded-lg shadow-sm" id="currentUserUsername">@Model.CurrentUser?.Username</span>
                    </div>
                </div>

                <div class="bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors">
                    <div class="flex justify-between items-center">
                        <span class="text-gray-600 font-medium">Email</span>
                        <span class="font-bold text-gray-800 bg-white px-3 py-1 rounded-lg shadow-sm" id="currentUserEmail">
                            @(Model.CurrentUser?.Email ?? "Tidak ada email")
                        </span>
                    </div>
                </div>
            </div>

            <!-- Kolom Kanan -->
            <div class="space-y-4">
                <div class="bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors">
                    <div class="flex justify-between items-center">
                        <span class="text-gray-600 font-medium">Login Terakhir</span>
                        <span class="font-bold text-gray-800 bg-white px-3 py-1 rounded-lg shadow-sm" id="currentUserLastLogin">
                            @if (Model.CurrentUser?.LastLogin != null)
                            {
                                @Model.CurrentUser.LastLogin.Value.ToString("dd MMMM yyyy HH:mm", new System.Globalization.CultureInfo("id-ID")) <text> WIB</text>
                            }
                            else
                            {
                                <text>Belum pernah login</text>
                            }
                        </span>
                    </div>
                </div>

                <div class="bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors">
                    <div class="flex justify-between items-center">
                        <span class="text-gray-600 font-medium">Status</span>
                        <span class="px-4 py-2 text-sm rounded-lg bg-green-100 text-green-800 font-semibold shadow-sm">
                            <i class="fas fa-check-circle mr-2"></i>Aktif
                        </span>
                    </div>
                </div>

                <div class="bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors">
                    <div class="flex justify-between items-center">
                        <span class="text-gray-600 font-medium">Dibuat Pada</span>
                        <span class="font-bold text-gray-800 bg-white px-3 py-1 rounded-lg shadow-sm" id="currentUserCreatedAt">
                            @if (Model.CurrentUser?.CreatedAt != null)
                            {
                                @Model.CurrentUser.CreatedAt.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("id-ID"))
                            }
                            else
                            {
                                <text>Data tidak tersedia</text>
                            }
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>