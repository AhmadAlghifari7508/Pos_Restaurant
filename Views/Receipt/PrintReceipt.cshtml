@model POSRestoran01.Models.ViewModels.ReceiptViewModels.ReceiptViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Model.OrderNumber</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Courier New', Courier, monospace;
            font-size: 11px;
            line-height: 1.5;
            width: 48mm;
            margin: 0;
            padding: 0;
            padding-left: 2mm;
            padding-right: 2mm;
            padding-top: 2mm;
            padding-bottom: 2mm;
            background: white;
            color: #000;
            max-width: 48mm;
            overflow: hidden;
        }

        .center {
            text-align: center;
        }

        .bold {
            font-weight: bold;
        }

        .hdr {
            text-align: center;
            margin-bottom: 6px;
            padding-bottom: 4px;
            border-bottom: 1px dashed #000;
        }

            .hdr .nm {
                font-size: 16px;
                font-weight: bold;
                margin-bottom: 3px;
                letter-spacing: 0px;
                word-wrap: break-word;
            }

            .hdr .inf {
                font-size: 11px;
                line-height: 1.5;
                word-wrap: break-word;
            }

        .info {
            margin: 6px 0;
            font-size: 11px;
        }

        .info-row {
            display: flex;
            margin-bottom: 2px;
            max-width: 100%;
        }

        .info-label {
            width: 55px;
            flex-shrink: 0;
            font-size: 11px
        }

        .info-colon {
            width: 8px;
            flex-shrink: 0;
        }

        .info-value {
            flex: 1;
            font-weight: bold;
            word-wrap: break-word;
            overflow-wrap: break-word;
            font-size: 10px;
        }

        .div {
            border-top: 1px dashed #000;
            margin: 4px 0;
        }

        .div-solid {
            border-top: 1px solid #000;
            margin: 4px 0;
        }

        .items-hdr {
            display: flex;
            justify-content: space-between;
            font-weight: bold;
            margin-bottom: 4px;
            font-size: 11px;
        }

        .itm {
            margin-bottom: 5px;
            font-size: 11px;
        }

        .itm-nm {
            font-weight: bold;
            margin-bottom: 2px;
            word-wrap: break-word;
            overflow-wrap: break-word;
        }

        .itm-ln {
            display: flex;
            justify-content: space-between;
            font-size: 11px;
            gap: 4px;
        }

        .itm-ln-left {
            flex: 1;
            min-width: 0;
        }

        .itm-ln-right {
            flex-shrink: 0;
            text-align: right;
            min-width: 50px;
            max-width: 50px;
        }

        .itm-nt {
            font-size: 11px;
            font-style: normal;
            margin-top: 2px;
            color: #000;
            word-wrap: break-word;
            overflow-wrap: break-word;
            white-space: pre-wrap;
            font-weight: normal;
        }

        .tot {
            display: flex;
            justify-content: space-between;
            margin: 2px 0;
            font-size: 11px;
            gap: 4px;
        }

        .tot-lbl {
            text-align: left;
            flex: 1;
            min-width: 0;
        }

        .tot-val {
            text-align: right;
            flex-shrink: 0;
            min-width: 50px;
            max-width: 50px;
        }

        .grt {
            font-weight: bold;
            font-size: 12px;
            margin-top: 4px;
            padding-top: 4px;
            border-top: 1px solid #000;
        }

        .pmt {
            margin-top: 6px;
            padding-top: 4px;
            border-top: 1px dashed #000;
        }

        .sav {
            text-align: center;
            font-weight: bold;
            margin: 6px 0;
            padding: 4px 0;
            border-top: 1px dashed #000;
            border-bottom: 1px dashed #000;
            font-size: 11px;
            word-wrap: break-word;
        }

        .sav-lbl {
            display: inline;
            margin-right: 4px;
        }

        .sav-val {
            display: inline;
        }

  
        .ftr {
            text-align: center;
            margin-top: 6px;
            padding-top: 4px;
            border-top: 1px dashed #000;
            font-size: 11px;
        }

        .ftr-msg {
            font-weight: bold;
            margin-bottom: 2px;
            word-wrap: break-word;
        }

        /* Print Settings */
        @@page {
            size: 58mm auto;
            margin: 0;
        }

        @@media print {
            body {
                width: 48mm;
                max-width: 48mm;
                margin: 0;
                padding-left: 2mm;
                padding-right: 2mm;
                padding-top: 2mm;
                padding-bottom: 2mm;
            }
        }
    </style>
</head>
<body>

    <div class="hdr">
        <div class="nm">@Model.RestaurantName</div>
        <div class="inf">@Model.RestaurantAddress</div>
        <div class="inf">Telp: @Model.RestaurantPhone</div>
    </div>

    <div class="info">
        <div class="info-row">
            <div class="info-label">No Order</div>
            <div class="info-colon">:</div>
            <div class="info-value">@Model.OrderNumber</div>
        </div>
        <div class="info-row">
            <div class="info-label">Tanggal</div>
            <div class="info-colon">:</div>
            <div class="info-value">@Model.OrderDate.ToString("dd/MM/yyyy") @(Model.OrderTime.Hours.ToString("00")):@(Model.OrderTime.Minutes.ToString("00"))</div>
        </div>
        <div class="info-row">
            <div class="info-label">Kasir</div>
            <div class="info-colon">:</div>
            <div class="info-value">@Model.CashierName</div>
        </div>
        @if (!string.IsNullOrEmpty(Model.CustomerName))
        {
            <div class="info-row">
                <div class="info-label">Customer</div>
                <div class="info-colon">:</div>
                <div class="info-value">@Model.CustomerName</div>
            </div>
        }
        <div class="info-row">
            <div class="info-label">Tipe</div>
            <div class="info-colon">:</div>
            <div class="info-value">@Model.OrderType @(Model.TableNo.HasValue ? $"- Meja {Model.TableNo}" : "")</div>
        </div>
    </div>

    <div class="div"></div>

    <div class="items-hdr">
        <div>Item</div>
        <div>Subtotal</div>
    </div>

    <div class="div"></div>

    @foreach (var item in Model.Items)
    {
        <div class="itm">
            <div class="itm-nm">@item.ItemName</div>
            <div class="itm-ln">
                <div class="itm-ln-left">@item.Quantity x @item.UnitPrice.ToString("N0")</div>
                <div class="itm-ln-right bold">@item.Subtotal.ToString("N0")</div>
            </div>
            @if (item.HasDiscount)
            {
                <div class="itm-ln">
                    <div class="itm-ln-left">Diskon @item.FormattedDiscountPercentage</div>
                    <div class="itm-ln-right">-@item.TotalSavingsPerItem.ToString("N0")</div>
                </div>
            }
            @if (!string.IsNullOrEmpty(item.OrderNote))
            {
                <div class="itm-nt">Note: @item.OrderNote</div>
            }
        </div>
    }

    <div class="div"></div>

    @if (Model.MenuDiscountTotal > 0)
    {
        <div class="tot">
            <div class="tot-lbl">Diskon Menu</div>
            <div class="tot-val">-@Model.MenuDiscountTotal.ToString("N0")</div>
        </div>
    }

    <div class="tot">
        <div class="tot-lbl">Subtotal</div>
        <div class="tot-val">@Model.Subtotal.ToString("N0")</div>
    </div>

    @if (Model.OrderDiscount > 0)
    {
        <div class="tot">
            <div class="tot-lbl">Diskon Order</div>
            <div class="tot-val">-@Model.OrderDiscount.ToString("N0")</div>
        </div>
    }

    <div class="tot">
        <div class="tot-lbl">PPN (11%)</div>
        <div class="tot-val">@Model.PPN.ToString("N0")</div>
    </div>

    <div class="tot grt">
        <div class="tot-lbl">TOTAL</div>
        <div class="tot-val">@Model.Total.ToString("N0")</div>
    </div>

    <div class="pmt">
        <div class="tot">
            <div class="tot-lbl">Tunai</div>
            <div class="tot-val">@Model.AmountPaid.ToString("N0")</div>
        </div>
        <div class="tot bold">
            <div class="tot-lbl">Kembalian</div>
            <div class="tot-val">@Model.ChangeAmount.ToString("N0")</div>
        </div>
    </div>

    @if (Model.TotalSavings > 0)
    {
        <div class="sav">
            <span class="sav-lbl">Total Hemat</span>
            <span class="sav-val">@Model.TotalSavings.ToString("N0")</span>
        </div>
    }

    <div class="ftr">
        <div class="ftr-msg">@Model.ReceiptFooter</div>
        <div>@Model.PrintedAt.ToString("dd/MM/yyyy HH:mm")</div>
    </div>

    <script>
        window.onload = function () {
            setTimeout(function () {
                window.print();
                setTimeout(function () {
                    window.close();
                }, 1000);
            }, 500);
        };
    </script>
</body>
</html>