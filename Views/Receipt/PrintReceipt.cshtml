@model POSRestoran01.Models.ViewModels.ReceiptViewModels.ReceiptViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Model.OrderNumber</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Courier New', Courier, monospace;
            font-size: 9px;
            line-height: 1.3;
            width: 46mm;
            margin: 0;
            padding: 1mm;
            background: white;
            color: #000;
        }

        .center {
            text-align: center;
        }

        .left {
            text-align: left;
        }

        .right {
            text-align: right;
        }

        .bold {
            font-weight: bold;
        }


        .div {
            border-top: 1px dashed #000;
            margin: 2px 0;
        }

        .div-solid {
            border-top: 1px solid #000;
            margin: 2px 0;
        }


        .hdr {
            text-align: center;
            margin-bottom: 4px;
            padding-bottom: 2px;
            border-bottom: 1px dashed #000;
        }

            .hdr .nm {
                font-size: 11px;
                font-weight: bold;
                margin-bottom: 1px;
            }

            .hdr .inf {
                font-size: 7px;
                line-height: 1.2;
            }


        .row {
            width: 100%;
            margin: 1px 0;
            font-size: 8px;
        }

            .row::after {
                content: "";
                display: table;
                clear: both;
            }

            .row .l {
                float: left;
                width: 35%;
            }

            .row .r {
                float: right;
                width: 65%;
                text-align: right;
            }


        .itm {
            margin: 2px 0;
            font-size: 8px;
        }

        .itm-nm {
            font-weight: bold;
            margin-bottom: 1px;
        }

        .itm-ln {
            width: 100%;
        }

            .itm-ln::after {
                content: "";
                display: table;
                clear: both;
            }

        .itm-q {
            float: left;
            width: 55%;
            font-size: 7px;
        }

        .itm-p {
            float: right;
            width: 45%;
            text-align: right;
            font-size: 7px;
        }

        .itm-nt {
            font-size: 7px;
            font-style: italic;
            margin-top: 1px;
        }

        .tot {
            width: 100%;
            margin: 1px 0;
            font-size: 8px;
        }

            .tot::after {
                content: "";
                display: table;
                clear: both;
            }

            .tot .lbl {
                float: left;
                width: 50%;
            }

            .tot .val {
                float: right;
                width: 50%;
                text-align: right;
            }

        .grt {
            font-weight: bold;
            font-size: 10px;
            margin-top: 2px;
            padding-top: 2px;
            border-top: 1px solid #000;
        }

        .pmt {
            margin-top: 4px;
            padding-top: 2px;
            border-top: 1px dashed #000;
        }


        .sav {
            text-align: center;
            font-weight: bold;
            margin: 4px 0;
            padding: 2px 0;
            border-top: 1px dashed #000;
            border-bottom: 1px dashed #000;
            font-size: 9px;
        }


        .ftr {
            text-align: center;
            margin-top: 4px;
            padding-top: 2px;
            border-top: 1px dashed #000;
            font-size: 7px;
        }

        @@page {
            size: 58mm auto;
            margin: 0;
        }

        @@media print {
            body {
                width: 46mm;
                margin: 0;
                padding: 1mm;
            }
        }
    </style>
</head>
<body>
 
    <div class="hdr">
        <div class="nm">@Model.RestaurantName</div>
        <div class="inf">@Model.RestaurantAddress</div>
        <div class="inf">Telp: @Model.RestaurantPhone</div>
    </div>


    <div class="row">
        <div class="l">No Order</div>
        <div class="r bold">@Model.OrderNumber</div>
    </div>
    <div class="row">
        <div class="l">Tanggal</div>
        <div class="r">@Model.OrderDate.ToString("dd/MM/yy") @(Model.OrderTime.Hours.ToString("00")):@(Model.OrderTime.Minutes.ToString("00"))</div>
    </div>
    <div class="row">
        <div class="l">Kasir</div>
        <div class="r">@Model.CashierName</div>
    </div>
    @if (!string.IsNullOrEmpty(Model.CustomerName))
    {
        <div class="row">
            <div class="l">Customer</div>
            <div class="r">@Model.CustomerName</div>
        </div>
    }
    <div class="row">
        <div class="l">Tipe</div>
        <div class="r">@Model.OrderType @(Model.TableNo.HasValue ? $"- Meja {Model.TableNo}" : "")</div>
    </div>

    <div class="div"></div>


    @foreach (var item in Model.Items)
    {
        <div class="itm">
            <div class="itm-nm">@item.ItemName</div>
            <div class="itm-ln">
                <div class="itm-q">@item.Quantity x @item.UnitPrice.ToString("N0")</div>
                <div class="itm-p">@item.Subtotal.ToString("N0")</div>
            </div>
            @if (item.HasDiscount)
            {
                <div class="itm-ln">
                    <div class="itm-q">Diskon @item.FormattedDiscountPercentage</div>
                    <div class="itm-p">-@item.TotalSavingsPerItem.ToString("N0")</div>
                </div>
            }
            @if (!string.IsNullOrEmpty(item.OrderNote))
            {
                <div class="itm-nt">Note: @item.OrderNote</div>
            }
        </div>
    }

    <div class="div"></div>


    <div class="tot">
        <div class="lbl">Subtotal</div>
        <div class="val">@Model.Subtotal.ToString("N0")</div>
    </div>

    @if (Model.MenuDiscountTotal > 0)
    {
        <div class="tot">
            <div class="lbl">Disk Menu</div>
            <div class="val">-@Model.MenuDiscountTotal.ToString("N0")</div>
        </div>
    }

    @if (Model.OrderDiscount > 0)
    {
        <div class="tot">
            <div class="lbl">Disk Order</div>
            <div class="val">-@Model.OrderDiscount.ToString("N0")</div>
        </div>
    }

    <div class="tot">
        <div class="lbl">PPN 11%</div>
        <div class="val">@Model.PPN.ToString("N0")</div>
    </div>

    <div class="tot grt">
        <div class="lbl">TOTAL</div>
        <div class="val">Rp @Model.Total.ToString("N0")</div>
    </div>


    <div class="pmt">
        <div class="tot">
            <div class="lbl">Bayar (@Model.PaymentMethod)</div>
            <div class="val">@Model.AmountPaid.ToString("N0")</div>
        </div>
        <div class="tot">
            <div class="lbl bold">Kembalian</div>
            <div class="val bold">Rp @Model.ChangeAmount.ToString("N0")</div>
        </div>
    </div>


    @if (Model.TotalSavings > 0)
    {
        <div class="sav">
            HEMAT: Rp @Model.TotalSavings.ToString("N0")
        </div>
    }

    <div class="ftr">
        <div style="font-weight: bold; margin-bottom: 1px; font-size: 7px;">@Model.ReceiptFooter</div>
        <div>@Model.PrintedAt.ToString("dd/MM/yy HH:mm")</div>
    </div>

    <script>
        window.onload = function() {
            setTimeout(function() {
                window.print();
                setTimeout(function() {
                    window.close();
                }, 1000);
            }, 500);
        };
    </script>
</body>
</html>