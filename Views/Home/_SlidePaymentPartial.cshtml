<div class="h-full p-6">
    <!-- Payment Header -->
    <div class="mb-6">
        <h3 class="text-lg font-bold text-gray-800 mb-4">Metode Pembayaran</h3>

        <!-- Payment Method -->
        <div class="mb-4">
            <div class="flex items-center p-3 border-2 border-blue-500 rounded-lg bg-blue-50">
                <i class="fas fa-money-bill-wave text-green-500 mr-3 text-lg"></i>
                <span class="font-semibold text-gray-800">Cash</span>
            </div>
        </div>

        <!-- Customer Name -->
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2">Nama Pelanggan</label>
            <input type="text"
                   id="slideCustomerName"
                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
                   placeholder="Masukkan nama pelanggan">
        </div>

        <!-- Order Type -->
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-3">Tipe Pesanan</label>
            <div class="grid grid-cols-2 gap-3 mb-3">
                <label class="flex items-center p-3 border-2 border-blue-500 bg-blue-50 rounded-lg cursor-pointer">
                    <input type="radio"
                           name="slideOrderType"
                           value="Dine In"
                           checked
                           onchange="toggleSlideTableNo()"
                           class="mr-2">
                    <span class="font-semibold text-gray-800">Dine In</span>
                </label>
                <label class="flex items-center p-3 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-blue-500">
                    <input type="radio"
                           name="slideOrderType"
                           value="Take Away"
                           onchange="toggleSlideTableNo()"
                           class="mr-2">
                    <span class="font-semibold text-gray-800">Take Away</span>
                </label>
            </div>

            <!-- Table Number (for Dine In) -->
            <div id="slideTableNoContainer">
                <label class="block text-gray-700 text-sm font-bold mb-2">No Meja</label>
                <input type="number"
                       id="slideTableNo"
                       name="slideTableNo"
                       min="1"
                       max="100"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
                       placeholder="Contoh: 5">
            </div>
        </div>

        <!-- Cash Amount -->
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2">Jumlah Cash</label>
            <div class="relative">
                <input type="number"
                       id="slideCashAmount"
                       step="1000"
                       min="0"
                       class="w-full px-4 py-3 pl-12 text-lg font-semibold border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
                       placeholder="0"
                       onkeyup="calculateSlideChange()"
                       oninput="calculateSlideChange()">
                <span class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500 font-medium">Rp</span>
            </div>
        </div>

        <!-- Payment Calculation -->
        <div class="mb-6">
            <h5 class="block text-gray-700 text-sm font-bold mb-2">Perhitungan Pembayaran</h5>
            <div class="bg-gray-50 rounded-lg p-4 space-y-2">
                <div class="flex justify-between items-center">
                    <span class="text-gray-700">Cash Diterima</span>
                    <span id="slideCashReceived" class="font-bold text-green-700">Rp 0</span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-gray-700">Total Bayar</span>
                    <span id="slidePaymentTotal" class="font-bold text-gray-800">Rp 0</span>
                    <span id="paymentTotalAmount" class="hidden">Rp 0</span>
                </div>
                <div class="flex justify-between items-center font-bold text-lg border-t border-gray-300 pt-2">
                    <span class="text-gray-800">Kembalian</span>
                    <span id="slideChange" class="text-green-600 text-xl">Rp 0</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex space-x-3 pt-4 border-t mt-auto">
        <button onclick="hideSlidePayment()"
                class="flex-1 bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-4 rounded-lg transition-all flex items-center justify-center space-x-2">
            <span>Batal</span>
        </button>
        <button id="slideConfirmBtn"
                onclick="processSlidePayment()"
                disabled
                class="flex-1 bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-4 rounded-lg transition-all flex items-center justify-center space-x-2 disabled:opacity-50 disabled:cursor-not-allowed">
            <span>Konfirmasi Pembayaran</span>
        </button>
    </div>
</div>

<script>
    // Initialize slide payment when loaded
    document.addEventListener('DOMContentLoaded', function() {
        toggleSlideTableNo();
    });
</script>