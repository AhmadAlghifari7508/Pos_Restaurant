<div class="h-full flex flex-col p-4">

    <div class="mb-4">
        <h3 class="text-base font-bold text-gray-800 mb-3">Metode Pembayaran</h3>


        <div class="mb-3">
            <div class="flex items-center p-2 border-2 border-blue-500 rounded-md bg-blue-50">
                <i class="fas fa-money-bill-wave text-green-500 mr-2 text-sm"></i>
                <span class="font-medium text-gray-800 text-sm">Cash</span>
            </div>
        </div>

        
        <div class="mb-3">
            <label class="block text-gray-700 text-xs font-bold mb-1">Nama Pelanggan</label>
            <input type="text"
                   id="slideCustomerName"
                   class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-200"
                   placeholder="Masukkan nama pelanggan">
        </div>

 
        <div class="mb-3">
            <label class="block text-gray-700 text-xs font-bold mb-2">Tipe Pesanan</label>
            <div class="grid grid-cols-2 gap-2 mb-2">
                <label class="flex items-center p-2 border-2 border-blue-500 bg-blue-50 rounded-md cursor-pointer">
                    <input type="radio"
                           name="slideOrderType"
                           value="Dine In"
                           checked
                           onchange="toggleSlideTableNo()"
                           class="mr-2 text-xs">
                    <span class="font-medium text-gray-800 text-xs">Dine In</span>
                </label>
                <label class="flex items-center p-2 border-2 border-gray-300 rounded-md cursor-pointer hover:border-blue-500">
                    <input type="radio"
                           name="slideOrderType"
                           value="Take Away"
                           onchange="toggleSlideTableNo()"
                           class="mr-2 text-xs">
                    <span class="font-medium text-gray-800 text-xs">Take Away</span>
                </label>
            </div>

            <div id="slideTableNoContainer">
                <label class="block text-gray-700 text-xs font-bold mb-1">No Meja</label>
                <input type="number"
                       id="slideTableNo"
                       name="slideTableNo"
                       min="1"
                       max="100"
                       class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-200"
                       placeholder="">
            </div>
        </div>

        
        <div class="mb-3">
            <label class="block text-gray-700 text-xs font-bold mb-1">Jumlah Cash</label>
            <div class="relative">
                <input type="number"
                       id="slideCashAmount"
                       step="1000"
                       min="0"
                       class="w-full px-3 py-2 pl-10 text-sm font-semibold border border-gray-300 rounded-md focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-200"
                       placeholder="0"
                       onkeyup="calculateSlideChange()"
                       oninput="calculateSlideChange()">
                <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500 font-medium text-xs">Rp</span>
            </div>
        </div>

        <div class="mb-4">
            <h5 class="block text-gray-700 text-xs font-bold mb-2">Perhitungan Pembayaran</h5>
            <div class="bg-gray-50 rounded-md p-3 space-y-1">
                <div class="flex justify-between items-center">
                    <span class="text-gray-700 text-xs">Cash Diterima</span>
                    <span id="slideCashReceived" class="font-bold text-green-700 text-xs">Rp 0</span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-gray-700 text-xs">Total Bayar</span>
                    <span id="slidePaymentTotal" class="font-bold text-gray-800 text-xs">Rp 0</span>
                    <span id="paymentTotalAmount" class="hidden">Rp 0</span>
                </div>
                <div class="flex justify-between items-center font-bold text-sm border-t border-gray-300 pt-1">
                    <span class="text-gray-800 text-xs">Kembalian</span>
                    <span id="slideChange" class="text-green-600 text-sm">Rp 0</span>
                </div>
            </div>
        </div>
    </div>

  
    <div class="mt-auto pt-3 border-t">
        <div class="flex space-x-2">
            <button onclick="hideSlidePayment()"
                    class="flex-1 bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-3 rounded-md transition-all flex items-center justify-center space-x-1 text-sm">
                <span>Batal</span>
            </button>
            <button id="slideConfirmBtn"
                    onclick="processSlidePayment()"
                    disabled
                    class="flex-1 bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-3 rounded-md transition-all flex items-center justify-center space-x-1 disabled:opacity-50 disabled:cursor-not-allowed text-sm">
                <span>Konfirmasi</span>
            </button>
        </div>
    </div>
</div>

<script>
 
    document.addEventListener('DOMContentLoaded', function() {
        toggleSlideTableNo();
    });
</script>

